# WordPress Integration Settings
# Copy this file to .env and customize for your environment

# Path to WordPress installation
# Example for standard WordPress installation: /var/www/html
# Example for Roots/Bedrock: /var/www/site/web/wp
WORDPRESS_PATH="/path/to/wordpress"

# Database settings (only needed if not using WordPress integration)
DB_HOST="localhost"
DB_NAME="wordpress"
DB_USER="root"
DB_PASSWORD=""
DB_PREFIX="wp_"

# Server settings
SERVER_PORT=8080
MAX_CONNECTIONS=100
LOG_LEVEL="info" # debug, info, warn, error 